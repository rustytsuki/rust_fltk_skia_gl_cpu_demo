    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_fltk_skia_gl_cpu_demo",
                    "--package=rust_fltk_skia_gl_cpu_demo"
                ],
                "filter": {
                    "name": "rust_fltk_skia_gl_cpu_demo",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch(CPU)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_fltk_skia_gl_cpu_demo",
                    "--package=rust_fltk_skia_gl_cpu_demo",
                    "--features=force_cpu"
                ],
                "filter": {
                    "name": "rust_fltk_skia_gl_cpu_demo",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}